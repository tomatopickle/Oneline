@import '../../../variables.styl';

:root {
    --chat-me-color: $primary;
}

.chatWindowSimple {
    .msg .msg-text {
        padding: 8px;
        border-radius: 1.125rem 1.125rem 1.125rem 0.15rem;
        background-color: lighten($bg-dark, 5);
        min-width: 50px;
        font-size: 17px;
        word-break: break-word;
        transition: border-radius 0.5s;
        align-items: center;
        white-space: break-spaces;
        max-width: 50vw;
    }

    .messageActions {
        display: none;
        padding: 5px;

        .icon {
            transition: all 0.2s;
            margin-inline: 3px;
            opacity: 0.5;
            cursor: pointer;

            &:hover {
                opacity: 1;
            }

            &:active {
                transform: scale(0.9);
            }
        }

        &:hover {
            display: flex;
        }
    }

    .msg:not(.me) + .messageActions {
        margin-left: 45px;
    }

    .msg.me + .messageActions {
        margin-right: 10px;
    }

    .msg:hover + .messageActions {
        display: flex;
    }

    .link-preview-parent {
        width: 60% !important;
        margin-right: 7px;
        margin-top: 7px;
    }

    .msg {
        position: relative;
    }

    .reaction {
        transition: background 0.2s;
        border-radius: 20px;
    }

    .reactions .reaction .flex-box {
        align-items: center;
    }

    .reactions .flex-box span {
        margin: 0;
    }

    .reactions .reactionNumber {
        padding-right: 5px;
        font-size: 13px;
        user-select: none;
    }

    .me .msg-text {
        background-color: var(--chat-me-color);
        border-radius: 1.125rem 1.125rem 0.15rem 1.125rem;
    }

    :not(.me) {
        &.sub, &.sub.last {
            margin-left: 30px;
            // .msg-text, .fileMsg , .msg-image, .msg-short-comment, .msg-short-liked {
            // margin-left: 30px;
            // }
        }
    }

    .sub .msg-text {
        border-radius: 0.25rem 1.125rem 1.125rem 0.25rem;
    }

    .me.sub .msg-text {
        border-radius: 1.125rem 0.25rem 0.25rem 1.125rem;
    }

    .last .msg-text {
        border-radius: 0.15rem 1.125rem 1.125rem 1.125rem;
    }

    .me.last .msg-text {
        border-radius: 1.125rem 0.15rem 1.125rem 1.125rem;
    }

    :not(.me) .link-preview-wrapper {
        margin-left: 50px;
    }

    .fileMsg {
        background-color: lighten($bg-dark, 5);
        position: relative;
        margin-bottom: 5px;
        width: max-content;
        margin-left: 30px;
        padding: 7px;
        padding-inline: 12px;
        font-size: 17px;
        border-radius: var(--ui-radius);

        .btn {
            height: max-content;
            margin: auto;
            margin-bottom: 0px;
            padding: 4px;
            box-shadow: none !important;

            &.loading {
                height: 32px;
                position: relative;
                top: -4px;
            }

            .spinner_parent {
                height: max-content;
            }
        }
    }

    .me .fileMsg {
        background-color: var(--primary);
        border-radius: 1.125rem 1.125rem 0.15rem 1.125rem;
    }

    .sub .fileMsg {
        border-radius: 1.125rem;
    }

    .me.sub .fileMsg {
        border-radius: 1.125rem;
    }

    .last .fileMsg {
        border-radius: 0.15rem 1.125rem 1.125rem 1.125rem;
    }

    .me.last .fileMsg {
        border-radius: 1.125rem 0.15rem 1.125rem 1.125rem;
    }

    .msg .fileMsg .flex-box {
        padding: 0;
    }

    .msg-image {
        width: max-content;
        display: block;
        position: relative;

        img {
            border-radius: var(--ui-radius);
            max-width: 99%;
            object-fit: contain;
            height: max-content;
            min-height: 60px;
            max-height: 40vh;
        }

        .controls {
            display: flex;
            position: absolute;
            top: 5px;
            right: 5px;
            transition: opacity 0.2s;

            .btn {
                transition: transform 0.2s, background-color 0.2s;
                transform: scale(0);
            }
        }

        &:hover {
            .controls .btn {
                transform: scale(1);
            }
        }
    }

    .username {
        position: absolute;
        left: 55px;
        top: -10px;
        color: grey;
    }

    .reacted {
        margin-bottom: 15px;
    }

    .time {
        text-align: center;
        color: lighten($bg-dark, 50);
        font-size: 11px;
    }

    .user-reacted {
        color: #3e81ff;
    }

    @keyframes messageAnimation {
        from {
            opacity: 0;
            transform: translate3d(50px, 0, 0);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }

    .messageAnimation-enter-active, .messageAnimationIn, .messageAnimation-leave-active, .messageAnimationOut {
        animation-duration: 0.5s;
        animation-fill-mode: both;
    }

    .messageAnimation-enter-active, .messageAnimationIn {
        animation-name: messageAnimation;
    }

    .messageAnimation-leave-active, .messageAnimationOut {
        animation-name: messageAnimation;
    }

    .msg .flex-box {
        padding-block: 1px;
        align-items: inherit;
    }

    .msg-text .emojiImg {
        width: 17px;
        height: 17px;
        margin-left: 5px;
        margin-right: 5px;
    }

    .msg-reply .emojiImg {
        width: 17px;
        height: 17px;
        margin-left: 5px;
        margin-right: 5px;
    }

    .msg:not(.me):not(.sub):not(.sub.last) div.msg-text {
        margin-top: 10px;
    }

    .me {
        .msg-reply-parent {
            .msg-text {
                float: right;
            }

            .msg-reply {
                margin-right: -5px;
            }
        }
    }

    .msg-reply-parent {
        .msg-text {
            width: max-content;
            margin: 0;
        }

        .msg-reply {
            background-color: lighten($bg-dark, 5);
            border-radius: 30px;
            padding-inline: 5px;
            padding-block: 4px;
            margin-bottom: 5px;
            width: max-content;
            display: flex;
            align-items: center;
        }
    }

    .oneEmoji .emojiImg {
        width: 50px;
        height: 50px;
    }

    .reactions {
        position: absolute;
        bottom: -15px;
        background-color: lighten($bg-dark, 7);
        border-radius: 35px;
        height: max-content;
        left: 20px;
        display: flex;
    }

    .msg:not(.sub):not(.me) .reactions {
        left: 50px;
    }

    .reaction:hover {
        background-color: lighten($bg-dark, 9);
        cursor: pointer;
    }

    .me .reactions {
        left: unset;
        right: 10px;
    }

    .messageActionBtn {
        transform: scale(0);
        transition: transform 0.2s;
        position: absolute;
        display: block;
        padding: 0;
        margin: 0;
        left: 45px;
    }

    .msg:hover .messageActionBtn {
        transform: scale(1);
    }

    .msg:not(.last):not(.sub) .messageActionBtn {
        top: 5px;
    }

    .msg.last .messageActionBtn {
        top: -10px;
    }

    .msg.sub .messageActionBtn {
        top: -10px;
    }

    .msg.sub.last .messageActionBtn {
        top: -10px;
    }

    .me .messageActionBtn {
        right: 5px;
        left: unset;
    }

    .inline-block {
        display: block !important;
    }

    .reactions .flex-box span {
        margin: 0;
    }

    .reactions .reactionNumber {
        padding-right: 5px;
        font-size: 13px;
    }

    html:not(.dark) .msg-text {
        color: white;
    }

    html:not(.dark) .time {
        color: #000 a8;
    }

    html:not(.dark) .msg:not(.me) .msg-text {
        background-color: #e1e1e1;
        color: black;
    }

    html:not(.dark) .reactions {
        background-color: #fff;
    }

    html:not(.dark) .reaction:hover {
        background-color: #e5e5e5;
    }

    html:not(.dark) #emojiBtn {
        color: #565656;
    }

    textarea {
        min-height: 50px;
    }

    .msg-gif img {
        border-radius: var(--ui-radius);
    }

    .msg .senderAvatar {
        align-self: baseline;
    }

    .info-message {
        font-size: 15px;
        margin: auto;
        display: block;
        width: max-content;
        background-color: rgb(37, 37, 37);
        border-radius: var(--ui-radius);
        margin-bottom: 5px;
    }

    .me a {
        text-decoration: underline;
        color: white;
    }

    .msg:not(.sub) {
        .msg-reply-parent {
            &:not(.me) {
                .msg-text {
                    margin-top: 0 !important;
                }

                .msg-reply {
                    margin-top: 10px;
                    margin-bottom: 2px;
                }
            }
        }

        .msg-image {
            margin-top: 10px;
        }
    }
}
