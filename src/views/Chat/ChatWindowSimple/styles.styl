    // }

    // html:not(.dark) .time {
    // color: #000 a8;
    // }

    // html:not(.dark) .reactions {
    // background-color: #fff;
    // }

    // html:not(.dark) .reaction:hover {
    // background-color: #e5e5e5;
    // }

    // html:not(.dark) #emojiBtn {
    // color: #565656;
    // }
    textarea {
        min-height: 50px;
    }

    .msg-gif img {
        border-radius: var(--ui-radius);
    }

    .msg .senderAvatar {
        align-self: baseline;
    }

    .msg.reply {
        .replyingToMessage {
            opacity: 0.5;
            position: relative;
        }

        small {
            display: block;
            margin-left: 55px;
            margin-block: 7px;

            b {
                font-weight: 600;
            }
        }

        .replyingToMessage:after {
            content: '';
            width: 3px;
            background-color: var(--sl-color-neutral-200);
            position: absolute;
            top: 37px;
            bottom: 0;
            left: 21.815px;
        }
    }

    .info-message {
        font-size: 15px;
        margin: auto;
        display: block;
        width: max-content;
        background-color: var(--sl-panel-background-color);
        border-radius: var(--sl-border-radius-pill);
        padding-inline: var(--sl-spacing-2x-small);
        margin-block: var(--sl-spacing-medium);
    }

    .msg:not(.sub) {
        // Or the usernames collide
        margin-top: var(--sl-spacing-small);

        .messageActions {
            // The first ones always have their messageactions higher than the other messages
            margin-top: var(--sl-spacing-x-small);
        }

        .msg-reply-parent {
            .msg-text {
                margin-top: 0 !important;
            }

            .msg-reply {
                margin-top: 10px;
                margin-bottom: 2px;
            }
        }

        .msg-image {
            margin-top: 10px;
        }
    }
}